{{yield}}

{{#if updateSuperkidForm}}
  <h4>Update {{superkid.name}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name" placeholder=superkid.name}}
        </div>

        <div class="form-group">
          <label for="age">Age</label>
          {{input value=age id="age" placeholder=superkid.age}}
        </div>

        <div class="form-group">
          <label for="powers">Powers</label>
          {{input value=powers id="powers" placeholder=superkid.powers}}
        </div>

        <div class="form-group">
          <label for="rate">Rate per Superhour</label>
          {{input value=rate id="rate" placeholder=superkid.rate}}
        </div>

        <div class="form-group">
          <label for="image">Image URL - They got new style</label>
          {{input value=image id="image" placeholder=superkid.image}}
        </div>

        <button {{action 'update' superkid}}>Update dat Superkid</button>
      </form>
    </div>
{{else}}
  <span {{action 'updateSuperkidForm'}} class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
{{/if}}
